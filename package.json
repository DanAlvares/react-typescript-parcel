{
  "name": "react-typescript-parcel",
  "version": "1.0.0",
  "description": "React-Typescript-Parcel-ESLint-Prettier starter project",
  "author": "Daniel Alvares",
  "main": "src/index.tsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/DanAlvares/react-typescript-parcel.git"
  },
  "keywords": [
    "React",
    "Typescript",
    "Parcel",
    "Prettier"
  ],
  "scripts": {
    "dev": "parcel ./src/index.html",
    "start": "concurrently -r \"npm:ts:watch\" \"npm:dev\"",
    "build": "npm run ts && parcel build ./src/index.html --experimental-scope-hoisting --public-url '/'",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "test": "jest",
    "ts": "tsc --noEmit",
    "ts:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.3",
    "@testing-library/react": "^9.5.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^11.15.27",
    "@types/react": "^16.9.50",
    "@types/react-dom": "^16.9.8",
    "concurrently": "^5.3.0",
    "husky": "^1.3.1",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.0",
    "react-test-renderer": "^16.13.1",
    "sass": "^1.26.11",
    "ts-jest": "^26.4.1",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.2.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettify",
      "tslint --fix",
      "git add"
    ]
  }
}
