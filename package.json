{
  "name": "react-typescript-parcel-seed",
  "version": "1.0.0",
  "description": "React-Typescript-Parcel-ESLint-Prettier seed project",
  "author": "Daniel Alvares",
  "main": "src/index.tsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/DanAlvares/react-typescript-parcel.git"
  },
  "keywords": [
    "React",
    "Typescript",
    "Parcel",
    "Prettier"
  ],
  "scripts": {
    "dev": "parcel ./src/index.html",
    "start": "concurrently -r \"npm:ts:watch\" \"npm:dev\"",
    "build": "npm run ts && parcel build ./src/index.html --public-url '/'",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "test": "jest",
    "ts": "tsc --noEmit",
    "ts:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "react": "^16.10.2",
    "react-dom": "^16.10.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.3",
    "@testing-library/react": "^9.3.2",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.6",
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.8.4",
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^10.0.0-0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.0",
    "react-test-renderer": "^16.10.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.7.0-dev.20191016"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettify",
      "tslint --fix",
      "git add"
    ]
  }
}